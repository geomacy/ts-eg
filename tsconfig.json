{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "moduleResolution": "Node",
    "sourceMap": true,
    "rootDirs": ["src", "test"],
    "noImplicitAny": true,
    "strict": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules", "test"
  ],
  "lib": ["es2015"]
}
